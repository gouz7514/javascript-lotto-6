{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": [2, "always"],
    "max-depth": ["error", 2],
    "import/prefer-default-export": "off",
    "import/extensions": ["off"],
    "class-methods-use-this": "off"
  }
}
